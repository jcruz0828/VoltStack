          <feature>Navigation menu</feature>
          <feature>Mobile hamburger menu</feature>
          <feature>Contact phone number</feature>
          <feature>Call-to-action button</feature>
        </features>
      </component>
      
      <component>
        <name>Footer</name>
        <file>components/Footer.tsx</file>
        <features>
          <feature>Company information</feature>
          <feature>Service areas</feature>
          <feature>Contact details</feature>
          <feature>Social media links</feature>
          <feature>Business hours</feature>
          <feature>Copyright notice</feature>
        </features>
      </component>
      
      <component>
        <name>Navigation</name>
        <file>components/Navigation.tsx</file>
        <features>
          <feature>Responsive menu</feature>
          <feature>Active page highlighting</feature>
          <feature>Smooth transitions</feature>
        </features>
      </component>
    </layout-components>
    
    <content-components>
      <component>
        <name>Hero</name>
        <file>components/Hero.tsx</file>
        <features>
          <feature>Eye-catching headline</feature>
          <feature>Professional window tinting imagery</feature>
          <feature>Call-to-action buttons</feature>
          <feature>Trust indicators</feature>
        </features>
      </component>
      
      <component>
        <name>ServiceCard</name>
        <file>components/ServiceCard.tsx</file>
        <features>
          <feature>Service icon</feature>
          <feature>Service title</feature>
          <feature>Description</feature>
          <feature>Starting price</feature>
          <feature>Learn more link</feature>
        </features>
      </component>
      
      <component>
        <name>GalleryGrid</name>
        <file>components/GalleryGrid.tsx</file>
        <features>
          <feature>Before/after image pairs</feature>
          <feature>Lightbox functionality</feature>
          <feature>Filter by service type</feature>
          <feature>Image optimization</feature>
        </features>
      </component>
      
      <component>
        <name>TestimonialCard</name>
        <file>components/TestimonialCard.tsx</file>
        <features>
          <feature>Customer photo</feature>
          <feature>Star rating</feature>
          <feature>Review text</feature>
