<?xml version="1.0" encoding="UTF-8"?>
<website-structure>
  <!-- Tech Stack Configuration -->
  <tech-stack>
    <framework>Next.js 14 (React-based static site generator)</framework>
    <styling>Tailwind CSS (utility-first CSS framework)</styling>
    <deployment>Vercel/Netlify (static hosting)</deployment>
    <icons>Lucide React (modern icon library)</icons>
    <animations>Framer Motion (smooth animations)</animations>
    <language>TypeScript (type safety)</language>
  </tech-stack>

  <!-- Website Architecture -->
  <architecture>
    <app-directory>
      <layout>
        <file>app/layout.tsx</file>
        <description>Root layout with global styles and metadata</description>
      </layout>
      
      <pages>
        <page>
          <route>/</route>
          <file>app/page.tsx</file>
          <name>Home</name>
          <description>Landing page with hero section, services overview, and call-to-action</description>
        </page>
        
        <page>
          <route>/services</route>
          <file>app/services/page.tsx</file>
          <name>Services</name>
          <description>Detailed service offerings and pricing</description>
        </page>
        
        <page>
          <route>/gallery</route>
          <file>app/gallery/page.tsx</file>
          <name>Gallery</name>
          <description>Before/after photos and portfolio</description>
        </page>
        
        <page>
          <route>/about</route>
          <file>app/about/page.tsx</file>
          <name>About</name>
          <description>Company story, team, and credentials</description>
        </page>
        
        <page>
          <route>/contact</route>
          <file>app/contact/page.tsx</file>
          <name>Contact</name>
          <description>Contact form, location, and business hours</description>
        </page>
        
        <page>
          <route>/quote</route>
          <file>app/quote/page.tsx</file>
          <name>Get Quote</name>
          <description>Quote request form and estimator</description>
        </page>
      </pages>
    </app-directory>
  </architecture>

  <!-- Component Structure -->
  <components>
    <layout-components>
      <component>
