          <feature>Vehicle type</feature>
        </features>
      </component>
      
      <component>
        <name>ContactForm</name>
        <file>components/ContactForm.tsx</file>
        <features>
          <feature>Name, email, phone fields</feature>
          <feature>Service selection</feature>
          <feature>Message area</feature>
          <feature>Form validation</feature>
          <feature>Submit handling</feature>
        </features>
      </component>
      
      <component>
        <name>QuoteCalculator</name>
        <file>components/QuoteCalculator.tsx</file>
        <features>
          <feature>Vehicle type selection</feature>
          <feature>Window count</feature>
          <feature>Tint type selection</feature>
          <feature>Price calculation</feature>
          <feature>Schedule appointment</feature>
        </features>
      </component>
    </content-components>
  </components>

